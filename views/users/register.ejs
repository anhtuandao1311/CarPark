<% layout('layouts/boilerplate') %>

  <div class="container d-flex flex-column 
  justify-content-center align-items-center mb-5">
    <div class="row" style="height:66px;">
      <%- include('../partials/flash') %>
    </div>
    <div class="row">
      <div class="col-4 ">


        <div class="card shadow" style="min-width: 300px;margin-top: 100%;">
          <img src="images/netpower-img.jpg" alt="" class="card-img-top" style="width: 100%;" />
          <div class="card-body">
            <h5 class="card-title">Register</h5>
            <form action="/register" method="POST" class="validated-form" novalidate>
              <div class="mb-3">
                <label class="form-label" for="username">Username</label>
                <input class="form-control" type="text" id="username" name="username" autofocus required>
                <div class="valid-feedback">
                  Looks good!
                </div>
              </div>

              <div class="mb-3">
                <label class="form-label" for="password">Password</label>
                <input class="form-control" type="password" id="password" name="password" required>
                <div class="valid-feedback">
                  Looks good!
                </div>
              </div>
              <button class="btn btn-info btn-block">Register</button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>